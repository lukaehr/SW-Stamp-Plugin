{
  "manifest_version": 3,
  "name": "SW Stamps",
  "version": "1.0",
  "description": "Speichert und f√ºgt Textstempel einfach ein.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/light/icon16.png",
      "48": "icons/light/icon64.png",
      "128": "icons/light/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "icons": {
    "16": "icons/light/icon16.png",
    "48": "icons/light/icon64.png",
    "128": "icons/light/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}